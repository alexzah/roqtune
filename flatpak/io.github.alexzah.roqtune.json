{
  "app-id": "io.github.alexzah.roqtune",
  "branch": "stable",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "roqtune",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--socket=pulseaudio",
    "--device=dri",
    "--talk-name=org.freedesktop.secrets",
    "--talk-name=org.freedesktop.FileManager1",
    "--own-name=org.mpris.MediaPlayer2.roqtune",
    "--filesystem=xdg-music:rw"
  ],
  "modules": [
    {
      "name": "roqtune",
      "buildsystem": "simple",
      "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "build-args": [
          "--share=network"
        ],
        "env": {
          "CARGO_HOME": "/run/build/roqtune/cargo",
          "RUSTUP_HOME": "/run/build/roqtune/rustup",
          "RUSTUP_TOOLCHAIN": "stable"
        }
      },
      "build-commands": [
        ". /usr/lib/sdk/rust-stable/enable.sh",
        "cargo build --release --locked",
        "install -Dm755 target/release/roqtune /app/bin/roqtune",
        "install -Dm644 flatpak/io.github.alexzah.roqtune.desktop /app/share/applications/io.github.alexzah.roqtune.desktop",
        "install -Dm644 flatpak/io.github.alexzah.roqtune.metainfo.xml /app/share/metainfo/io.github.alexzah.roqtune.metainfo.xml",
        "install -Dm644 flatpak/io.github.alexzah.roqtune.png /app/share/icons/hicolor/512x512/apps/io.github.alexzah.roqtune.png"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "..",
          "skip": [
            ".git",
            ".flatpak-builder",
            "target",
            "flatpak/.build",
            "flatpak/.repo",
            "flatpak/dist"
          ]
        }
      ]
    }
  ]
}
