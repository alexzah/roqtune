{
  "app-id": "io.github.alexzah.roqtune",
  "branch": "stable",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "roqtune",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--socket=pulseaudio",
    "--device=dri",
    "--talk-name=org.freedesktop.secrets",
    "--filesystem=xdg-music:rw"
  ],
  "modules": [
    {
      "name": "roqtune-binary",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 roqtune /app/bin/roqtune",
        "install -Dm644 io.github.alexzah.roqtune.desktop /app/share/applications/io.github.alexzah.roqtune.desktop",
        "install -Dm644 io.github.alexzah.roqtune.metainfo.xml /app/share/metainfo/io.github.alexzah.roqtune.metainfo.xml",
        "install -Dm644 io.github.alexzah.roqtune.png /app/share/icons/hicolor/512x512/apps/io.github.alexzah.roqtune.png"
      ],
      "sources": [
        {
          "type": "file",
          "path": "../target/release/roqtune"
        },
        {
          "type": "file",
          "path": "io.github.alexzah.roqtune.desktop"
        },
        {
          "type": "file",
          "path": "io.github.alexzah.roqtune.metainfo.xml"
        },
        {
          "type": "file",
          "path": "io.github.alexzah.roqtune.png"
        }
      ]
    }
  ]
}
