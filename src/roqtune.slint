                            HorizontalLayout {
                                spacing: 6px;
                                padding-left: 8px;
                                padding-right: 6px;

                                LineEdit {
                                    text <=> root.playlist_search_query;
                                    placeholder-text: "Search tracks...";
                                    horizontal-stretch: 1;
