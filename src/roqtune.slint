                                    }
                                }
                            }
                        }

                        if root.playlist_search_visible : Rectangle {
                            x: max(8px, parent.width - self.width - 8px);
                            y: root.playlist_filter_active ? 38px : 6px;
                            width: 320px;
                            height: 30px;
                            border-radius: 4px;
                            background: #1c1c1cec;
                            border-width: 1px;
                            border-color: #3f3f3f;
