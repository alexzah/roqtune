                                && root.column_resize_index < root.playlist_column_widths_px.length : Rectangle {
                            x: column-header-drag-ta.x + track-list.viewport-x
                                + root.playlist-column-divider-x(root.column_resize_index) * 1px - 1px;
                            y: 3px;
                            width: 2px;
                            height: parent.height - 6px;
                            border-radius: 1px;
                            background: #5da8ff;
                        }

                    }

                    track-list-container := Rectangle {
                        clip: true;

                        if root.playlist_filter_active : Rectangle {
                            x: max(8px, parent.width - self.width - 8px);
                            y: 6px;
                            width: 156px;
                            height: 26px;
                            border-radius: 4px;
                            background: root.playlist_filter_blocked_feedback ? #3d2f19f0 : #1f2f3fe6;
                            border-width: 1px;
                            border-color: root.playlist_filter_blocked_feedback ? #dca95a : #4a6684;
