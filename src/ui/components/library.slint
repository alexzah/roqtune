import { LibraryRowData } from "../types.slint";

export component LibraryRow inherits Rectangle {
    in property <LibraryRowData> data;
    in property <bool> is-hover;

    height: 34px;
    background: is-hover ? #333 : transparent;
    border-radius: 2px;

    HorizontalLayout {
        padding-left: 8px;
        padding-right: 8px;
        spacing: 8px;

        if root.data.item_kind == 1 : Rectangle {
            width: 16px;
            Text {
                text: "◎";
                color: #8fa7c6;
                font-size: 11px;
                horizontal-alignment: center;
                vertical-alignment: center;
            }
        }

        if root.data.item_kind != 1 : Rectangle {
            width: 24px;
            height: 24px;
            border-radius: 2px;
            border-width: 1px;
            border-color: #3a3a3a;
            background: #1f1f1f;

            if root.data.has_album_art : Image {
                width: parent.width;
                height: parent.height;
                source: root.data.album_art;
                image-fit: contain;
            }

            if !root.data.has_album_art : Text {
                text: root.data.item_kind == 0 ? "♪" : "▦";
                color: #8fa7c6;
                font-size: 11px;
                horizontal-alignment: center;
                vertical-alignment: center;
            }
        }

        VerticalLayout {
            spacing: 0px;
            vertical-stretch: 1;
            Text {
                text: root.data.primary;
                color: #ddd;
                font-size: 12px;
                overflow: elide;
                horizontal-alignment: left;
                vertical-alignment: center;
            }
            Text {
                text: root.data.secondary;
                color: #888;
                font-size: 11px;
                overflow: elide;
                horizontal-alignment: left;
                vertical-alignment: center;
            }
        }
    }
}
