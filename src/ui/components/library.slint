import { LibraryRowData } from "../types.slint";
import { AppIcons } from "../icons.slint";
import { AppPalette } from "../theme_palette.slint";

export component LibraryRow inherits Rectangle {
    in property <LibraryRowData> data;
    in property <bool> is-hover;

    height: 34px;
    property <brush> idle-background: root.data.selected
        ? AppPalette.selection-bg
        : root.data.is_playing
            ? AppPalette.accent-soft-bg
        : transparent;
    background: is-hover
        ? root.data.selected
            ? AppPalette.selection-border.mix(AppPalette.selection-bg, 0.6)
            : root.data.is_playing
                ? AppPalette.accent-soft-border.mix(AppPalette.accent-soft-bg, 0.6)
                : AppPalette.control-hover-bg
        : root.idle-background;
    border-radius: 2px;

    HorizontalLayout {
        padding-left: 8px;
        padding-right: 8px;
        spacing: 8px;

        if root.data.leading != "" : Rectangle {
            width: 28px;
            Text {
                text: root.data.leading;
                color: AppPalette.text-secondary;
                font-size: 11px;
                horizontal-alignment: right;
                vertical-alignment: center;
            }
        }

        if root.data.leading == "" : Rectangle {
            width: 24px;
            height: 24px;
            border-radius: 2px;
            border-width: 1px;
            border-color: AppPalette.border;
            background: AppPalette.panel-bg-elevated;

            if root.data.has_album_art : Image {
                width: parent.width;
                height: parent.height;
                source: root.data.album_art;
                image-fit: contain;
            }

            if !root.data.has_album_art : Image {
                source: root.data.item_kind == 0 ? AppIcons.music
                    : root.data.item_kind == 1 ? AppIcons.user
                    : root.data.item_kind == 2 ? AppIcons.disc
                    : root.data.item_kind == 3 ? AppIcons.category
                    : root.data.item_kind == 4 ? AppIcons.calendar-time
                    : AppIcons.folder;
                width: 12px;
                height: 12px;
                x: (parent.width - self.width) / 2;
                y: (parent.height - self.height) / 2;
                image-fit: contain;
                colorize: AppPalette.text-secondary;
            }
        }

        VerticalLayout {
            spacing: 0px;
            vertical-stretch: 1;
            HorizontalLayout {
                spacing: 4px;

                if root.data.item_kind == 0 && root.data.is_playing : Image {
                    source: AppIcons.player-play;
                    width: 10px;
                    height: 10px;
                    y: (parent.height - self.height) / 2;
                    image-fit: contain;
                    colorize: AppPalette.accent;
                }

                Text {
                    text: root.data.primary;
                    color: root.data.selected
                        ? AppPalette.text-primary
                        : root.data.is_playing
                            ? AppPalette.accent
                            : AppPalette.text-primary;
                    font-size: 12px;
                    overflow: elide;
                    horizontal-alignment: left;
                    vertical-alignment: center;
                    horizontal-stretch: 1;
                }
            }
            Text {
                text: root.data.secondary;
                color: root.data.selected
                    ? AppPalette.text-secondary
                    : root.data.is_playing
                        ? AppPalette.text-secondary
                        : AppPalette.text-muted;
                font-size: 11px;
                overflow: elide;
                horizontal-alignment: left;
                vertical-alignment: center;
            }
        }

        if root.data.source_badge != "" : Rectangle {
            width: 26px;
            height: 18px;
            border-radius: 9px;
            border-width: 1px;
            border-color: AppPalette.accent-soft-border;
            background: AppPalette.accent-soft-bg;
            y: (parent.height - self.height) / 2;

            Image {
                source: AppIcons.opensubsonic;
                width: 12px;
                height: 12px;
                x: (parent.width - self.width) / 2;
                y: (parent.height - self.height) / 2;
                image-fit: contain;
                colorize: AppPalette.accent;
            }
        }

        if root.data.favoritable : Rectangle {
            width: 18px;
            height: 18px;
            y: (parent.height - self.height) / 2;
            Image {
                source: root.data.favorited ? AppIcons.heart-filled : AppIcons.heart;
                width: 14px;
                height: 14px;
                x: (parent.width - self.width) / 2;
                y: (parent.height - self.height) / 2;
                image-fit: contain;
                colorize: root.data.favorited
                    ? AppPalette.danger
                    : AppPalette.text-muted;
            }
        }
    }
}
