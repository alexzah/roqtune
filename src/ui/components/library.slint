import { Palette } from "std-widgets.slint";
import { LibraryRowData } from "../types.slint";

export component LibraryRow inherits Rectangle {
    in property <LibraryRowData> data;
    in property <bool> is-hover;
    private property <bool> dark: Palette.color-scheme == ColorScheme.dark;

    height: 34px;
    property <brush> idle-background: root.data.selected
        ? (root.dark ? #2f3f56 : #d8e6f8)
        : root.data.is_playing
            ? (root.dark ? #203345 : #d1e2f7)
        : transparent;
    background: is-hover
        ? root.data.selected
            ? (root.dark ? #394c67 : #cbddf2)
            : root.data.is_playing
                ? (root.dark ? #2a4258 : #c4d9f1)
                : (root.dark ? #333 : #e5edf7)
        : root.idle-background;
    border-radius: 2px;

    HorizontalLayout {
        padding-left: 8px;
        padding-right: 8px;
        spacing: 8px;

        if root.data.leading != "" : Rectangle {
            width: 28px;
            Text {
                text: root.data.leading;
                color: root.dark ? #8fa7c6 : #42658d;
                font-size: 11px;
                horizontal-alignment: right;
                vertical-alignment: center;
            }
        }

        if root.data.leading == "" : Rectangle {
            width: 24px;
            height: 24px;
            border-radius: 2px;
            border-width: 1px;
            border-color: root.dark ? #3a3a3a : #c8d1dc;
            background: root.dark ? #1f1f1f : #f4f7fb;

            if root.data.has_album_art : Image {
                width: parent.width;
                height: parent.height;
                source: root.data.album_art;
                image-fit: contain;
            }

            if !root.data.has_album_art : Text {
                text: root.data.item_kind == 0 ? "♪"
                    : root.data.item_kind == 1 ? "◎"
                    : root.data.item_kind == 3 ? "♬"
                    : root.data.item_kind == 4 ? "◷"
                    : "▦";
                color: root.dark ? #8fa7c6 : #42658d;
                font-size: 11px;
                horizontal-alignment: center;
                vertical-alignment: center;
            }
        }

        VerticalLayout {
            spacing: 0px;
            vertical-stretch: 1;
            HorizontalLayout {
                spacing: 4px;

                if root.data.item_kind == 0 && root.data.is_playing : Text {
                    text: "▶";
                    color: root.dark ? #8fb8ff : #2d5f98;
                    font-size: 10px;
                    vertical-alignment: center;
                }

                Text {
                    text: root.data.primary;
                    color: root.data.selected
                        ? (root.dark ? #ececec : #203142)
                        : root.data.is_playing
                            ? (root.dark ? #d7e9ff : #245077)
                            : (root.dark ? #ddd : #243444);
                    font-size: 12px;
                    overflow: elide;
                    horizontal-alignment: left;
                    vertical-alignment: center;
                    horizontal-stretch: 1;
                }
            }
            Text {
                text: root.data.secondary;
                color: root.data.selected
                    ? (root.dark ? #bcc7d8 : #4f667f)
                    : root.data.is_playing
                        ? (root.dark ? #9eb6d3 : #436588)
                        : (root.dark ? #888 : #647385);
                font-size: 11px;
                overflow: elide;
                horizontal-alignment: left;
                vertical-alignment: center;
            }
        }
    }
}
